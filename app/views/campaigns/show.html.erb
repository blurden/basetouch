<div class="row">
	<div class="span12">
		<div class="well">
			<h3><%= @campaign.property %> Projects </h3> 
			<p>
				<%= link_to 'Edit', edit_campaign_path(@campaign) %> |
				<%= link_to 'Back', campaigns_path %>
			</p>
			<% @campaign.projects.each do |project| %>
  			<p><b>Name: </b><%= project.name %></p>
			<% end %>

<h2>Add a project:</h2>
<%= form_for([@campaign, @campaign.projects.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>







